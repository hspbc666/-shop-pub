page {
  background-color: #F4F4F4;
}

.page-wrapper {
  margin: 0;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  -webkit-tap-highlight-color: transparent;
}

.tab-row{
  padding-top: 30rpx;
  width: 720rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  white-space: nowrap;
  background-color: white;
}
.tab{
  width: 120rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: inline-block;
  padding-bottom: 10rpx;
  text-align: center;
}

.tab-selected {
  border-bottom: 4rpx solid;
  color: #EF3965;
}