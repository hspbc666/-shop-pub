<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- 第二层 -->
    <!-- 距离第一层上边缘20dp -->
    <item android:top="20dp">
        <shape>
            <!-- 实心填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>