.page-wrapper {
  margin: 0;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  background-color: #F4F4F4;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  -webkit-tap-highlight-color: transparent;
  min-height: 2000rpx;
}


.order-info {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 20rpx;
}

.saler-row {
  display: flex;
  flex-direction: row;
}

.saler-info {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.saler-name {
  color: #222222;
}

.right-arrow {
  height: 40rpx;
  width: 40rpx;
}

.status {
  color: #97999e;
}

.goods-row {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.goods-img {
  margin-left: 40rpx;
  width: 100rpx;
  height: 100rpx;
}

.goods-desc {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}

.goods-name {
  font-size: 35rpx;
  width: 400rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  margin-top: 20rpx;
  color: #222222;
}

.tags {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.seven-days {
  color: #677DA5;
  background-color: #EAF3FF;
  border-radius: 10rpxx;
  padding: 5rpx 10rpx;
}

.no-change {
  margin-left: 10rpx;
  color: #97999E;
  background-color: #F2F5F5;
  border-radius: 10rpxx;
  padding: 5rpx 10rpx;
}

.goods-info-split {
  margin-top: 20rpx;
  width: 100%;
  height: 1rpx;
  background-color: #DFDFDF;
}

.bottom-wrapper {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  background-color: white;
}

.bottom-split {
  background-color: #DFDFDF;
  height: 2rpx;
  margin-bottom: 20rpx;
}

.goods-info-split {
  margin-top: 20rpx;
  width: 100%;
  height: 1rpx;
  background-color: #DFDFDF;
}

.btn-row {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  justify-content: flex-end;
}

.del-order {
  margin-right: 50rpx;
  border-radius: 10rem;
  padding: 5rpx 20rpx;
  color: #575e64;
  border: 1rpx solid #ebebeb;
}