<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_round_rect_white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的订单" />

        <TextView
            android:id="@+id/allOrderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部订单"
            app:drawableEndCompat="@drawable/ic_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toPayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待付款"
            app:drawableTopCompat="@drawable/to_pay" />

        <TextView
            android:id="@+id/toDeliverTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待发货"
            app:drawableTopCompat="@drawable/to_deliver" />

        <TextView
            android:id="@+id/toReceiveTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待收货"
            app:drawableTopCompat="@drawable/to_receive" />

        <TextView
            android:id="@+id/toCommentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待评价"
            app:drawableTopCompat="@drawable/to_comment" />

        <TextView
            android:id="@+id/afterSalesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退换/售后"
            app:drawableTopCompat="@drawable/to_return" />
    </LinearLayout>

</LinearLayout>